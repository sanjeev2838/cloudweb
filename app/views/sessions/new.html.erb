<% provide(:title, "Sign in") %>


    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="field">

            <div class="label_div"> <%= f.label :email %> </div>
            <div class="value_div"> <%= f.text_field :email,:size => 20 %> </div>

      </div>
      <div class="field">
        <p>
        <div class="label_div"><%= f.label :password %></div>
         <div class="value_div"><%= f.password_field :password,:size => 20 %></div>
        </p>
      </div>
    <p><%= link_to "forgotten password?", new_password_reset_path %></p>

       <div class="submit_button"> <%= f.submit "Sign in" %></div>
    <% end %>


